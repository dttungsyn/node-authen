<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.css">
	<link rel="stylesheet" href="/lib/font-awesome-4.2.0/css/font-awesome.css">
	<link rel="stylesheet" href="/lib/kartik-v-bootstrap-fileinput/css/fileinput.css">
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>
<div class="container">
  <div class="col-sm-6 col-sm-offset-3">

	<h1><span class="fa fa-sign-in"></span> <%=action%></h1>

	<% if (message.length > 0) { %>
		<div class="alert alert-danger"><%= message %></div>
	<% } %>

	<!-- LOGIN FORM -->
	<form action="/<%=action%>" method="post">
		<div class="form-group">
			<label>Email</label>
			<input type="text" class="form-control" name="username">
		</div>
		<div class="form-group">
			<label>Password</label>
			<input type="password" class="form-control" name="password">
		</div>
		
		<% if (action == 'signup') { %>
		<div class="form-group">
            <label>Profile Picture</label>
            <input id="input-id" type="file" class="file" data-preview-file-type="image" style="">
        </div>
        <% } %>
        

		<button type="submit" class="btn btn-warning btn-lg"><%=action%></button>
	</form>

	<hr>

	<p>Need an account? <a href="/signup">Signup</a></p>
	<p>Or go <a href="/">home</a>.</p>

	<div class="text-center">
		<p>A demo by <a href="http://scotch.io">Scotch</a>.</p>
		<p>Visit the <a href="http://scotch.io/tutorials/javascript/easy-node-authentication-setup-and-local">tutorial</a>.</p>
	</div>

  </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->
<script src="/lib/bootstrap-3.2.0/js/bootstrap.js"></script> <!-- load up bootstrap js -->
<script src="/lib/kartik-v-bootstrap-fileinput/js/fileinput.js"></script>

</body>
</html>