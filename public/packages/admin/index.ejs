  <title>Staff Management</title>
  <meta name="description" content="" />
  <meta name="author" content="fpt-dev" />

  <meta name="viewport" content="width=device-width; initial-scale=1.0" />

  <!-- Replace favicon.ico & apple-touch-icon.png in the root of your domain and delete these references -->
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
  
  
  <!-- DataTables CSS -->
  <link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.5/css/jquery.dataTables.css">
  
  <!-- Bootstrap -->
  <link rel="stylesheet" href="/lib/bootstrap-3.2.0/css/bootstrap.css">
  
  <!-- font awesome-->
  <link rel="stylesheet" href="/lib/font-awesome-4.2.0/css/font-awesome.css">
  
  <link rel="stylesheet" href="/packages/admin/css/admin.css" />
      
</head>

<body ng-app="adminModule" ng-controller="adminController">
  <% include ./../main/views/partials/navheader.ejs %>
  <div class="container">
      
	<table staff-data-table id="" class="display">
        <!--
        <thead>
                    <tr>
                        <th>Office</th>
                    </tr>
                </thead>-->
      <tr><td>
        <span class="pull-right group-icons">
          <i class="fa fa-edit" style="color: #3B67AB"></i>
          <i class="fa fa-remove" style="color: #3B67AB"></i>
        </span>
      </td></tr>
      
      
    </table>
    <i class="fa fa-plus" style="color: #3B67AB" ng-click="addStaff()"></i>
    
    
  </div>

  <!-- jQuery -->
  <!-- <script type="text/javascript" charset="utf8" src="/DataTables-1.10.5/media/js/jquery.js"></script> -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
  <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
  
  <!-- load Angular -->
  <script src="/lib/angular/angular.js"></script><!-- load angular 1.3.15 -->
  
  <!-- load up bootstrap js -->
  <script src="/lib/bootstrap-3.2.0/js/bootstrap.js"></script> 
  
  <!-- DataTables -->
  <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.js"></script>
  
  <!-- Angular -->
  <script src="/packages/admin/js/controllers/admin.js"></script>
  <script src="/packages/admin/js/services/admin.js"></script>
  <script src="/packages/admin/js/directives/admin.js"></script>

  <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myModalLabel">Modal title</h4>
          </div>
          <div class="modal-body">
            <form>
              <!-- fix columns -->
              <div class="form-group" ng-repeat="column in fixColumns">
                <label for="fix_{{column}}" class="control-label">{{column}}</label>
                <input type="text" class="form-control" id="fix_{{column}}" ng-model="openUser[ column ]">
              </div>
              
              <div class="sortable">
                <!-- custom columns -->
                <div class="form-group" ng-repeat="column in customColumns">
                    <label for="cus_{{column}}" class="control-label">{{column}}</label>
                    <span class="">
                      <i class="fa fa-remove" style="color: #A8BCDB" ng-click="removeCustomCol($index)"></i>
                    </span>
                    <input type="text" class="form-control" id="cus_{{column}}" ng-model="openUser[ column ]">
                </div>    
              </div>
              
              
              <span class="">
                <i class="fa fa-plus-circle" style="color: #70C255" ng-click="addCustomCol($index)"></i>
              </span>

            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" ng-click="save()">Save changes</button>
          </div>
        </div>
      </div>
    </div>

</body>
</html>
